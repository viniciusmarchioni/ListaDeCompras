<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/layout"
        android:background="@drawable/edittext_rounded_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="59dp"
            android:layout_height="62dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cart_holder" />

        <TextView
            android:id="@+id/textnome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image"
            android:text="XXXXX"
            android:textSize="20sp" />

        <TextView
            android:textColor="#858585"
            android:id="@+id/textqnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textnome"
            android:layout_toEndOf="@+id/image"
            android:text="400"
            android:textSize="20sp" />

        <TextView
            android:textColor="#858585"
            android:id="@+id/notation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textnome"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textqnt"
            android:text="Unidades"
            android:textSize="20sp" />

        <TextView
            android:textColor="#858585"
            android:id="@+id/textmarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textqnt"
            android:layout_toEndOf="@+id/image"
            android:text="Marca: X"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>