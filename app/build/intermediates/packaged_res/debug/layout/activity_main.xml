<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tema"
    android:theme="@style/Base.Theme.Compras"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="@color/tema"
        android:contentDescription="@string/imageDescription"
        android:src="@drawable/settings_48" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/codigo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:clickable="false"
        android:text="@string/sessao_ask_text"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/compartilhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/codigo"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@+id/text"
        android:background="#00FFFFFF"
        android:clickable="false"
        android:src="@drawable/share"
        android:visibility="invisible"
        android:contentDescription="@string/imageDescription" />

    <EditText
        android:id="@+id/codigo"
        style="@style/editText"
        android:layout_centerInParent="true"
        android:autofillHints=""
        android:hint="@string/session_code"
        android:inputType="textCapCharacters"
        android:maxLength="10"
        android:maxLines="1"
        android:minWidth="120dp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/entrar"
        style="@style/button"
        android:layout_below="@+id/codigo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="@string/singIn"
        android:textColor="@color/tema" />

    <Button
        android:id="@+id/criar"
        style="@style/button"
        android:layout_below="@+id/entrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="@string/create_text"
        android:textColor="@color/tema" />

</RelativeLayout>